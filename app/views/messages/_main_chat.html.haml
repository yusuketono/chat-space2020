.main_chat

  .main_header
    .main_header__left
      .main_header__left__group
        =@group.name
      .main_header__left__member
        Member:
        - @group.group_users.each do |group_user| 
          = group_user.user.name

    = link_to edit_group_path(@group) ,class:"main_header__right" do
      .main_header__right__box
        Edit

  .messages
    = render @messages

  .main_form
    = form_with model: [@group, @message], html: {class: "form"}, local: true do |f|
      .form__contents
        = f.text_field :content, class: 'form__contents__text', placeholder: 'type a message'
        = f.label :image, class: 'form__contents__image' do
          = icon('far', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit'